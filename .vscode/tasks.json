{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Gzweb",
            "type": "process",
            "command": "npm",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "/opt/gzweb",
                "env": {
                    "npm_config_port": "9090"
                }
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Stop Gzweb",
            "type": "shell",
            "command": "pkill -SIGTERM -f 'npm start' || true",
            "problemMatcher": []
        },
        {
            "label": "Start Foxglove Bridge",
            "type": "shell",
            "command": "source ./install/setup.bash && ros2 run foxglove_bridge foxglove_bridge",
            "options": {
                "cwd": "/opt/overlay_ws",
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Stop Foxglove Bridge",
            "type": "shell",
            "command": "pkill -SIGTERM -f 'ros2 run foxglove_bridge foxglove_bridge' || true",
            "problemMatcher": []
        },
        {
            "label": "Start Foxglove Studio",
            "type": "process",
            "command": "caddy",
            "args": [
                "file-server",
                "--listen",
                ":8080"
            ],
            "options": {
                "cwd": "/opt/foxglove",
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Stop Foxglove Studio",
            "type": "shell",
            "command": "pkill -SIGTERM -f 'caddy file-server --listen :8080' || true",
            "problemMatcher": []
        },
        {
            "label": "Start Foxglove",
            "dependsOn": [
                "Start Foxglove Bridge",
                "Start Foxglove Studio"
            ],
            "problemMatcher": []
        },
        {
            "label": "Stop Foxglove",
            "dependsOn": [
                "Stop Foxglove Bridge",
                "Stop Foxglove Studio"
            ],
            "problemMatcher": []
        },
        {
            "label": "Restart Foxglove",
            "dependsOn": [
                "Stop Foxglove",
                "Start Foxglove"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}
