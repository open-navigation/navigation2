{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Gzweb",
            "type": "process",
            "command": "npm",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "/opt/gzweb",
                "env": {
                    "npm_config_port": "9090"
                }
            },
        },
        {
            "label": "Start Foxglove Bridge",
            "type": "shell",
            "command": "ros2",
            "args": [
                "run",
                "foxglove_bridge",
                "foxglove_bridge"
            ],
        },
        {
            "label": "Start Foxglove Studio",
            "type": "process",
            "command": "caddy",
            "args": [
                "file-server",
                "--listen",
                ":8080"
            ],
            "options": {
                "cwd": "/opt/foxglove",
            },
        },
    ]
}